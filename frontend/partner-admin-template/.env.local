# ===========================================
# DantaroWallet 파트너 관리자 템플릿 환경 설정
# 📋 포트 표준: PORT_STANDARD.md 참조
# ===========================================

# 🔒 포트 설정 (DantaroWallet 표준 - 절대 변경 금지)
# dev-manager.sh와 동기화된 표준 포트 사용
NEXT_PUBLIC_FRONTEND_PORT=3030  # Partner Admin Template (이 프로젝트)
PORT=3030                       # Next.js 개발 서버 포트

# 🌐 백엔드 API 설정 (표준 포트 8000)
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_API_VERSION=/api/v1

# 환경 설정
NEXT_PUBLIC_ENV=development

# Tron 네트워크 설정
NEXT_PUBLIC_TRON_NETWORK=mainnet
NEXT_PUBLIC_TRON_API_KEY=

# 웹소켓 설정 (실시간 데이터용)
NEXT_PUBLIC_WS_URL=ws://localhost:8001

# 로그 레벨
NEXT_PUBLIC_LOG_LEVEL=debug

# JWT 및 인증 설정
NEXT_PUBLIC_JWT_COOKIE_NAME=dantaro_admin_token
NEXT_PUBLIC_JWT_EXPIRES_IN=7d
NEXT_PUBLIC_REFRESH_TOKEN_COOKIE_NAME=dantaro_admin_refresh

# 기능 플래그
NEXT_PUBLIC_FEATURE_ANALYTICS=true
NEXT_PUBLIC_FEATURE_ENERGY_RENTAL=true
NEXT_PUBLIC_FEATURE_AUDIT_LOGS=true
NEXT_PUBLIC_FEATURE_HEALTH_CHECK=true
NEXT_PUBLIC_FEATURE_ONBOARDING=true

# 페이지네이션 및 캐시
NEXT_PUBLIC_DEFAULT_PAGE_SIZE=10
NEXT_PUBLIC_MAX_PAGE_SIZE=100
NEXT_PUBLIC_CACHE_TTL=300000
NEXT_PUBLIC_STALE_TIME=60000

# 실시간 데이터 설정
NEXT_PUBLIC_REALTIME_ENABLED=true
NEXT_PUBLIC_SSE_ENABLED=true
NEXT_PUBLIC_WS_RECONNECT_INTERVAL=3000
NEXT_PUBLIC_WS_MAX_RECONNECT_ATTEMPTS=5

# 개발용 임시 파트너 계정 (테스트/데모용)
NEXT_PUBLIC_DEMO_EMAIL=partner@dantarowallet.com
NEXT_PUBLIC_DEMO_PASSWORD=DantaroPartner2024!
NEXT_PUBLIC_DEMO_USERNAME=dantaro_partner_admin

# Mock 데이터 사용 설정 (개발 환경)
NEXT_PUBLIC_USE_MOCK_DATA=true
