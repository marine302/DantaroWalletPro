# ===========================================
# DantaroWallet 파트너 관리자 템플릿 환경 설정
# ===========================================
# 실제 사용시 .env.local로 복사하여 사용하세요

# 포트 설정 (고정 - 변경 금지)
# 파트너 어드민: 3030 (시스템 전체에서 고정 사용)
NEXT_PUBLIC_FRONTEND_PORT=3030
PORT=3030

# API 백엔드 설정
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_API_VERSION=/api/v1

# 환경 설정
NEXT_PUBLIC_ENV=development
NEXT_PUBLIC_APP_NAME=Partner Admin Template
NEXT_PUBLIC_APP_VERSION=1.0.0

# Tron 네트워크 설정
NEXT_PUBLIC_TRON_NETWORK=shasta
NEXT_PUBLIC_TRON_API_KEY=your_tron_api_key_here
NEXT_PUBLIC_TRON_FULL_HOST=https://api.shasta.trongrid.io
NEXT_PUBLIC_TRON_SOLIDITY_HOST=https://api.shasta.trongrid.io

# 웹소켓 설정 (실시간 데이터용)
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws
NEXT_PUBLIC_REALTIME_ENABLED=true
NEXT_PUBLIC_SSE_ENABLED=true
NEXT_PUBLIC_WS_RECONNECT_INTERVAL=3000
NEXT_PUBLIC_WS_MAX_RECONNECT_ATTEMPTS=5

# 로그 설정
NEXT_PUBLIC_LOG_LEVEL=debug
NEXT_PUBLIC_ENABLE_CONSOLE_LOGS=true
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=true
NEXT_PUBLIC_ERROR_REPORT_URL=/api/log-error

# 기능 플래그
NEXT_PUBLIC_FEATURE_ANALYTICS=true
NEXT_PUBLIC_FEATURE_ENERGY_RENTAL=true
NEXT_PUBLIC_FEATURE_AUDIT_LOGS=true
NEXT_PUBLIC_FEATURE_HEALTH_CHECK=true
NEXT_PUBLIC_FEATURE_ONBOARDING=true

# 페이지네이션 및 캐시 설정
NEXT_PUBLIC_DEFAULT_PAGE_SIZE=10
NEXT_PUBLIC_MAX_PAGE_SIZE=100
NEXT_PUBLIC_CACHE_TTL=300000
NEXT_PUBLIC_STALE_TIME=60000
